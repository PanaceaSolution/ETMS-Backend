{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@middlewares/*": ["src/middlewares/*"],
      "@config/*": ["src/config/*"],
      "@types/*": ["src/types/*"],
      "@utils/*": ["src/utils/*"],
      "@user/*": ["src/modules/user/*"],
      "@user/services/*": ["src/modules/user/services/*"],
      "@user/routes/*": ["src/modules/user/routes/*"],
      "@user/controllers/*": ["src/modules/user/controllers/*"]
    },
    // ðŸ‘‡ this makes TS treat imports without extension correctly
    "allowImportingTsExtensions": false
  },
  // âœ… only compile source code
  "include": ["src/**/*"],
  // âœ… explicitly exclude everything else
  "exclude": ["node_modules", "dist", "eslint.config.mts"]
}
