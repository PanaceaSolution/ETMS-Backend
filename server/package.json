{
  "name": "etms-backend",
  "version": "1.0.0",
  "description": "Event Ticket Management System backend with Express, Prisma, PostgreSQL, and TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "imports": {
    "#middlewares/*": "./dist/middlewares/*.js",
    "#config/*": "./dist/config/*.js",
    "#types/*": "./dist/types/*.js",
    "#utils/*": "./dist/utils/*.js",
    "#user/*": "./dist/modules/user/*.js",
    "#user/services/*": "./dist/modules/user/services/*.js",
    "#user/routes/*": "./dist/modules/user/routes/*.js",
    "#user/controllers/*": "./dist/modules/user/controllers/*.js"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias --resolve-full-paths",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts",
    "prepare": "husky"
  },
  "author": "sah-arjun",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jiti": "^2.5.1",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,md}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
